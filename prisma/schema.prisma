generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// Enums

enum Role {
  ADMIN
  USER
}

// NextAuth Prisma Adapter compatible models

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          Role      @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts          Account[]
  sessions          Session[]
  incomingDonations IncomingDonation[]
  fundDistributions FundDistribution[]
  activityLogs      ActivityLog[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Domain models

model Campaign {
  id          String  @id @default(cuid())
  name        String
  description String?
  isActive    Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  incomingDonations    IncomingDonation[]
  fundDistributions    FundDistribution[]
  monthlyExchangeRates MonthlyExchangeRate[]
}

model IncomingDonation {
  id                 String   @id @default(cuid())
  campaignId         String
  userId             String
  donorName          String
  originalAmount     Decimal
  originalCurrency   String
  exchangeRate       Decimal
  convertedAmountMMK Decimal
  note               String?
  donatedAt          DateTime

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  campaign Campaign @relation(fields: [campaignId], references: [id])
  user     User     @relation(fields: [userId], references: [id])

  @@index([campaignId])
  @@index([userId])
}

model FundDistribution {
  id            String   @id @default(cuid())
  campaignId    String
  userId        String
  recipient     String
  amountMMK     Decimal
  note          String?
  distributedAt DateTime

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  campaign Campaign @relation(fields: [campaignId], references: [id])
  user     User     @relation(fields: [userId], references: [id])

  @@index([campaignId])
  @@index([userId])
}

model MonthlyExchangeRate {
  id           String  @id @default(cuid())
  campaignId   String
  month        Int
  year         Int
  fromCurrency String
  toCurrency   String
  rate         Decimal

  campaign Campaign @relation(fields: [campaignId], references: [id])

  @@unique([campaignId, month, year, fromCurrency, toCurrency])
  @@index([campaignId])
}

// Donation Places (master data)

model DonationPlace {
  id        String   @id @default(cuid())
  name      String   @unique
  note      String?
  isActive  Boolean  @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  distributionRecords DistributionRecord[]
}

// Monthly Donation Overview

model MonthlyOverview {
  id           String   @id @default(cuid())
  year         Int
  month        Int // 1â€“12
  exchangeRate Float

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  supporterDonations  SupporterDonation[]
  distributionRecords DistributionRecord[]

  @@unique([year, month])
}

model SupporterDonation {
  id                String @id @default(cuid())
  monthlyOverviewId String
  name              String
  amount            BigInt
  currency          String // JPY | MMK
  kyatAmount        BigInt

  createdAt DateTime @default(now())

  monthlyOverview MonthlyOverview @relation(fields: [monthlyOverviewId], references: [id], onDelete: Cascade)

  @@index([monthlyOverviewId])
}

model DistributionRecord {
  id                String  @id @default(cuid())
  monthlyOverviewId String
  donationPlaceId   String?
  recipient         String
  amountMMK         BigInt
  remarks           String?

  createdAt DateTime @default(now())

  monthlyOverview MonthlyOverview @relation(fields: [monthlyOverviewId], references: [id], onDelete: Cascade)
  donationPlace   DonationPlace?  @relation(fields: [donationPlaceId], references: [id])

  @@index([monthlyOverviewId])
  @@index([donationPlaceId])
}

// Yearly Donation Summary

model YearlySummary {
  id             String   @id @default(cuid())
  fiscalYear     Int      @unique
  totalCollected Decimal  @default(0)
  totalDonated   Decimal  @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  monthlyRecords MonthlyRecord[]
}

model MonthlyRecord {
  id              String  @id @default(cuid())
  yearId          String
  month           String
  collectedAmount Decimal @default(0)
  donatedAmount   Decimal @default(0)

  yearlySummary YearlySummary @relation(fields: [yearId], references: [id], onDelete: Cascade)

  @@unique([yearId, month])
  @@index([yearId])
}

// Activity Logs

model ActivityLog {
  id          String   @id @default(cuid())
  timestamp   DateTime @default(now())
  userId      String?
  userName    String
  userRole    String
  actionType  String
  actionLabel String
  details     String
  ipAddress   String?
  status      String   @default("Success")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([timestamp])
  @@index([actionType])
  @@index([status])
}
